{
  "name": "cometosite.be",
  "version": "0.0.1",
  "description": "cometosite.be rest api",
  "main": "src/app/app.ts",
  "scripts": {
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "copy-files": "copyfiles -u 1 ./src/docs/*.yaml ./dist/app/",
    "build": "tsc && npm run copy-files",
    "start": "node -r dotenv/config ./dist/app/app.js",
    "predev": "npm run clean && npm run copy-files",
    "dev": "concurrently \"npm run tsc-watch\" \"npm run nodemon\"",
    "prenodemon": "wait-on ./dist/app/app.js",
    "nodemon": "nodemon -r dotenv/config --delay 1500ms --watch dev.env --watch ./dist \"./dist/app/app.js\" dotenv_config_path=dev.env",
    "tsc-watch": "tsc -w",
    "lint": "tslint -c tslint.json \"./src/**/*.ts\""
  },
  "license": "MIT",
  "engines": {
    "npm": "3.x"
  },
  "dependencies": {
    "axios": "^0.21.0",
    "body-parser": "1.15.2",
    "core-js": "2.4.1",
    "cors": "^2.8.5",
    "dotenv": "2.0.0",
    "express": "4.14.0",
    "morgan": "1.7.0",
    "serialize-error": "2.0.0",
    "swagger-ui-express": "^4.1.4",
    "validate.js": "0.10.0",
    "winston": "2.2.0",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@types/body-parser": "0.0.33",
    "@types/core-js": "0.9.39",
    "@types/cors": "^2.8.9",
    "@types/express": "4.0.33",
    "@types/morgan": "1.7.32",
    "@types/node": "^14.0.27",
    "@types/validator": "5.7.34",
    "@types/winston": "0.0.28",
    "@types/yamljs": "^0.2.31",
    "concurrently": "3.1.0",
    "copyfiles": "^2.4.0",
    "nodemon": "1.11.0",
    "rimraf": "^2.6.2",
    "tslint": "3.15.1",
    "typescript": "3.5.3",
    "wait-on": "1.5.3"
  }
}
